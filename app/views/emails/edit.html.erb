<div class="row">
  <div class="col-lg-3">
    <div class="well sidebar-nav">
      <h3><%= link_to "#{@user.name}", group_user_path(@group, @user) %></h3>
      <ul class="nav nav-list">
        <li class="nav-header">Email</li>
      </ul>
    </div><!--/.well -->
  </div><!--/span-->
  <div class="col-lg-9">
    <%= form_for [@group, @user, @email] do |f| %>
      <div class="row">
        <div class="col-lg-3">
          Email Id
        </div>
        <div class="col-lg-1">:</div>
        <div class="col-lg-4">
          <%= f.text_field :address %>
        </div>
      </div>
      <br />
      <div class="row">
        <div class="col-lg-4 col-lg-offset-3">
          <%= f.submit 'Update' %>
        </div>
      </div>
    <% end %>
  </div>
</div>